{
  "manifest_version": 3,
  "name": "M3U8 Catcher",
  "description": "Detects M3U8 video streams, lets you manage them, and forwards links to a native downloader app.",
  "version": "0.1.1",
  "permissions": [
    "webRequest",
    "tabs",
    "scripting",
    "contextMenus",
    "notifications",
    "nativeMessaging"
  ],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_title": "M3U8 Catcher",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "assets/logo.png"
  }
}
